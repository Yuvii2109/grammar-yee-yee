{
  "manifest_version": 3,
  "name": "GrammarYeeYee - Smart Checker",
  "version": "1.0",
  "description": "Detects grammar errors using LanguageTool API with caching and debounce.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://api.languagetool.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}